#:kivy 2.1.0

<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.5,0.5,0.5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1,0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO REFINARIA v1.0'
            size_hint_x: None
            width: 300
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'    
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'MODBUS'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'Scan Time'
                    on_release: root._scanPopup.open()

        Image:
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top':1, 'right':1}

    FloatLayout:
        canvas: 
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/Refinaria.png'
        
        Label:
            id: fornalha 
            text: '-.- °C'
            font_size: 25 
            bold: True 
            halign: 'center'
            pos_hint: {'x': -0.45, 'y': 0.01}
            color: 0,0,0,1
        TempLabel:
            id: gas ref
            pos_hint: {'x':0.175, 'y': 0.28} 
        TempLabel:
            id: gasolina
            pos_hint: {'x':0.175, 'y': 0.205} 
        TempLabel:
            id: nafta
            pos_hint: {'x':0.175, 'y': 0.13}
        TempLabel:
            id: querosene
            pos_hint: {'x':0.175, 'y': 0.055}
        TempLabel:
            id: diesel
            pos_hint: {'x':0.175, 'y': -0.02}
        TempLabel:
            id: oelo_lub
            pos_hint: {'x':0.175, 'y': -0.095} 
        TempLabel:
            id: oelo_comb
            pos_hint: {'x':0.175, 'y': -0.17}
        TempLabel:
            id: resíduos
            pos_hint: {'x':0.175, 'y': -0.245}


<TempLabel@Label>:
    text: '-.- °C' 
    font_size: 20 
    bold: True 
    halign: 'center'
    color: 0,0,0,1